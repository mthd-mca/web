pipeline {
    agent any

    environment {
        // Change 'dockerhub' to the exact ID you gave your credentials in Jenkins
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
        IMAGE_NAME = "675711/python-app"
    }

    stages {
        stage('Checkout') {
            steps {
                // branch: 'main' is usually the default for modern GitHub repos
                git url: 'https://github.com/mthd-mca/web.git', 
                    branch: 'main', 
                    credentialsId: 'dockerhub' // Replace with your GitHub Credential ID
            }
        }

        stage('Build Docker image') {
            steps {
                script {
                    // Correct syntax: docker.build
                    dockerImage = docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Correct syntax: docker.withRegistry
                    // Use an empty string '' for the default Docker Hub registry
                    docker.withRegistry('', 'dockerhub') {
                        dockerImage.push()
                    }
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning up workspace..."
            deleteDir() // Correct syntax: camelCase
        }
        success {
            echo "Pipeline succeeded!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
